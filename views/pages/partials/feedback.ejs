<div class="container mt-4" id="feedback">
  <div class="row">
    <div class="col-md-6">
      <div class="maincontent">
        <h2>בואו נדבר</h2>
        <% if (locals.errors){%>
        <div class="alert alert-danger">
          <ul>
            <% errors.forEach(function (error){%>
            <li><%=error.msg%></li>
            <%})%>
          </ul>
        </div>

        <%} else if(locals.successMessage) {%>
        <div class="alert alert-success">
          <%= successMessage %>
        </div>
        <%}%>
        <form class="feedback-form" method="POST" action="/models/feedback">
          <div class="form-group">
            <label for="feedback-form-name">שם מלא</label>
            <input
              type="text"
              class="form-control"
              id="feedback-form-name"
              name="name"
              placeholder="Enter your name"
            />
          </div>
          <div class="form-group">
            <label for="feedback-form-email">E-Mail</label>
            <input
              type="text"
              class="form-control"
              id="feedback-form-email"
              name="email"
              placeholder="Enter your email address"
            />
          </div>
          <div class="form-group">
            <label for="feedback-form-title">Title</label>
            <input
              type="text"
              class="form-control"
              id="feedback-form-title"
              name="title"
              placeholder="Title of your feedback"
            />
          </div>
          <div class="form-group">
            <label for="feedback-form-message">Message</label>
            <textarea
              type="text"
              placeholder="Enter your message, then hit the submit button"
              class="form-control"
              id="feedback-form-message"
              name="message"
              rows="3"
            ></textarea>
          </div>
          <button type="submit" class="btn btn-secondary float-right">Submit</button>
        </form>
      </div>
    </div>
    <aside class="col-md-6">
      <div class="maincontent feedback">
        <h2>הדיבור</h1>

        <div class="feedback-items">
          <% var counter = 0 %>
           <% feedbackData.forEach(function (feedback) {%>
<% if(counter != 3){ %> 
          <div class="feedback-item item-list media-list">
            <div class="feedback-item media">
              <div class="feedback-info media-body">
                <div class="feedback-head">
                  <div class="feedback-title"><%=feedback.title%></div>
                  <small><%=feedback.name%></small>
                </div>
                <div class="feedback-message" ><%=feedback.message%></div>
              </div>
            </div>
          </div>
          <hr/>
          <% counter ++; %> 
          <% } %> 
          <% })%>
        </div>
      </div>
    </aside>
  </div>
</div>
