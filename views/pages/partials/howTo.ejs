<% var bgcolor = ["blue","yellow","green"]
var colorIndex = 0;
%> 
  <div class="container-fluid modelsPlate marginCenter col-md-6">
    <h2 class="marginCenter alignCenter col-8">מודלים ללמידה מעורבת</h2>
