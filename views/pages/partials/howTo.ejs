    <div class="scrolling-wrapper row flex-row flex-nowrap mt-4 pb-4">
			<% modelsData.forEach(function (model) {%>
        <a href="/models/<%=model.id%>">
			<div class="col-8">
				<div class="card card-block bc-<%=bgcolor[colorIndex]%>  padding100 alignCenter">
          <h3 style="background: none"><%=model.name%></h3>
          
        </div>
      </div>
    </a>
    <% colorIndex++;
    if(colorIndex >2 ){
      colorIndex = 0 ;
    } %> 
      <% })%>
  
    </div>
</div>

  </div>
